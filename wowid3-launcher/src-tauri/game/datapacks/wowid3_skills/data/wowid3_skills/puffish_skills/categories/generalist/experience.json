{
  "level_limit": 100,
  "experience_per_level": {
    "type": "expression",
    "data": {
      "expression": "min(level ^ 1.6 + 20, 300)"
    }
  },
  "sources": [
    {
      "type": "puffish_skills:mine_block",
      "data": {
        "variables": {
          "is_snow_block": {
            "operations": [
              {"type": "get_mined_block_state"},
              {
                "type": "puffish_skills:test_any",
                "data": {
                  "blocks": [
                    "minecraft:snow",
                    "minecraft:snow_block",
                    "minecraft:powder_snow"
                  ]
                }
              }
            ]
          },
          "is_ice_block": {
            "operations": [
              {"type": "get_mined_block_state"},
              {
                "type": "puffish_skills:test_any",
                "data": {
                  "blocks": [
                    "minecraft:ice",
                    "minecraft:packed_ice",
                    "minecraft:blue_ice",
                    "minecraft:frosted_ice"
                  ]
                }
              }
            ]
          }
        },
        "experience": [
          {"condition": "is_snow_block", "expression": "3"},
          {"condition": "is_ice_block", "expression": "5"}
        ]
      }
    },
    {
      "type": "puffish_skills:break_block",
      "data": {
        "variables": {
          "is_snowman": {
            "operations": [
              {"type": "get_broken_block_state"},
              {
                "type": "puffish_skills:test_any",
                "data": {
                  "blocks": [
                    "minecraft:snow_golem"
                  ]
                }
              }
            ]
          }
        },
        "experience": [
          {"condition": "is_snowman", "expression": "10"}
        ]
      }
    },
    {
      "type": "puffish_skills:kill_entity",
      "data": {
        "variables": {
          "is_snow_golem": {
            "operations": [
              {"type": "get_killed_entity"},
              {
                "type": "puffish_skills:test_any",
                "data": {
                  "entities": [
                    "minecraft:snow_golem"
                  ]
                }
              }
            ]
          },
          "is_winter_mob": {
            "operations": [
              {"type": "get_killed_entity"},
              {
                "type": "puffish_skills:test_any",
                "data": {
                  "entities": [
                    "minecraft:stray",
                    "minecraft:polar_bear"
                  ]
                }
              }
            ]
          },
          "dropped_xp": {
            "operations": [
              {"type": "get_dropped_experience"}
            ]
          }
        },
        "experience": [
          {"condition": "is_snow_golem", "expression": "15"},
          {"condition": "is_winter_mob", "expression": "dropped_xp * 2"}
        ],
        "anti_farming": {
          "limit_per_chunk": 20,
          "reset_after_seconds": 600
        }
      }
    },
    {
      "type": "puffish_skills:craft_item",
      "data": {
        "variables": {
          "is_snow_item": {
            "operations": [
              {"type": "get_crafted_item_stack"},
              {
                "type": "puffish_skills:test_any",
                "data": {
                  "items": [
                    "minecraft:snow_block",
                    "minecraft:snowball",
                    "minecraft:snow"
                  ]
                }
              }
            ]
          },
          "is_pumpkin": {
            "operations": [
              {"type": "get_crafted_item_stack"},
              {
                "type": "puffish_skills:test_any",
                "data": {
                  "items": [
                    "minecraft:carved_pumpkin",
                    "minecraft:jack_o_lantern"
                  ]
                }
              }
            ]
          },
          "is_ice_item": {
            "operations": [
              {"type": "get_crafted_item_stack"},
              {
                "type": "puffish_skills:test_any",
                "data": {
                  "items": [
                    "minecraft:packed_ice",
                    "minecraft:blue_ice"
                  ]
                }
              }
            ]
          }
        },
        "experience": [
          {"condition": "is_snow_item", "expression": "5"},
          {"condition": "is_pumpkin", "expression": "10"},
          {"condition": "is_ice_item", "expression": "15"}
        ]
      }
    }
  ]
}
