{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WOWID3Launcher",
  "version": "1.2.0",
  "identifier": "com.wowid3.launcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "WOWID3 Launcher - Christmas Edition",
        "width": 1300,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "script-src": "'self'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' asset: data: blob: https://textures.minecraft.net",
        "font-src": "'self' data:",
        "connect-src": "'self' ipc: http://ipc.localhost asset: https://wowid-launcher.frostdev.io https://mc.frostdev.io https://api.mojang.com https://sessionserver.mojang.com https://textures.minecraft.net https://login.microsoftonline.com https://user.auth.xboxlive.com https://xsts.auth.xboxlive.com https://api.minecraftservices.com",
        "media-src": "'self' asset:",
        "object-src": "'none'",
        "frame-src": "'none'",
        "frame-ancestors": "'none'",
        "worker-src": "'self'",
        "child-src": "'self'",
        "form-action": "'none'",
        "base-uri": "'self'",
        "upgrade-insecure-requests": ""
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$CACHE/**",
          "$HOME/.wowid3/**",
          "$HOME/.local/share/wowid3-launcher/**",
          "$APPLOCALDATA/**",
          "$APPDATA/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "wowid3-launcher.sh",
      "binaries/wireguard-installer.exe"
    ],
    "externalBin": [],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "files": {
          "/usr/bin/wowid3-launcher-wrapper": "wowid3-launcher.sh"
        }
      }
    }
  }
}
